@model TritonExpress.Models.Branch

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: url('../../Images/bc8.jpg');
    }
</style>
<center><h3>Are you sure you want to delete this branch?</h3></center>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.branchName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.branchName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.location)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BranchId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">All Branches</a>
    </form>
</div>
