@model TritonExpress.Models.WayBill

@{
    ViewData["Title"] = "Update";
}
<style>
    body {
        background-image: url('../../Images/bc8.jpg');
    }
</style>
<center><h1>Update A WayBill</h1></center>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="wayBillId" />
                    <div class="form-group">
                        <label asp-for="wayBillReference" class="control-label"></label>
                        <input asp-for="wayBillReference" class="form-control" />
                        <span asp-validation-for="wayBillReference" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="totalWeight" class="control-label"></label>
                        <input asp-for="totalWeight" class="form-control" />
                        <span asp-validation-for="totalWeight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="parcels" class="control-label"></label>
                        <input asp-for="parcels" class="form-control" />
                        <span asp-validation-for="parcels" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleId" class="control-label"></label>
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <br />
                    <div>
                        <a class="btn btn-info" asp-action="Index">All WayBills</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
